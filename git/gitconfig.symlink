
# Local/private config goes in the include
[include]
	path = ~/.gitconfig.local

[alias]
	co = checkout

[commit]
	gpgsign = true

[pull]
	rebase = true
	ff = only

[init]
	defaultBranch = main

# No longer `git push --set-upstream origin main`
# See: https://twitter.com/SantoshYadavDev/status/1558086948484530177
[push]
	autoSetupRemote = true
